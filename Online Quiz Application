      justify-content: center;
      font-weight: bold;
      flex-shrink: 0;
    }

    .option.correct .option-label {
      background: #27ae60;
    }

    .option.incorrect .option-label {
      background: #e74c3c;
    }

    .quiz-actions {
      display: flex;
      justify-content: space-between;
      margin-top: 2rem;
    }

    .btn-secondary {
      background: #6c757d;
      color: white;
      padding: 0.8rem 2rem;
      font-size: 1rem;
    }

    .btn-secondary:hover {
      background: #5a6268;
    }

    /* Results Screen */
    .results-screen {
      display: none;
