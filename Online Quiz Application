      border-bottom: 2px solid #e0e0e0;
    }

    .progress-info {
      font-weight: 600;
      color: #667eea;
    }

    .timer {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 1.2rem;
      font-weight: bold;
      color: #333;
    }

    .timer.warning {
      color: #e74c3c;
      animation: pulse 1s infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    .progress-bar {
      width: 100%;
